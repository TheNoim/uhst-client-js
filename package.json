{
  "name": "uhst",
  "version": "0.0.0-development",
  "description": "User Hosted Secure Transmission client",
  "jsnext:main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "server": "uhst",
    "clean": "rm -rf dist",
    "test": "npm run clean && nyc --include lib/**/*.ts --extension .ts --require ts-node/register mocha test/**/*.spec.ts && rm -rf ./coverage",
    "test:watch": "mocha -w --compilers ts:ts-node/register test/**/*.spec.ts",
    "build": "tsc -p tsconfig-esm.json && rollup -c rollup.config.js dist/index.js > dist/uhst.bundle.js",
    "lint": "tslint -c tslint.json lib/**/*.ts test/**/*.ts",
    "dist": "npm run build && copyfiles package.json README.md dist",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uhst/uhst-client-js.git"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "distributed"
  ],
  "author": "Stefan Dimitrov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uhst/uhst-client-js/issues"
  },
  "homepage": "https://github.com/uhst/uhst-client-js#readme",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "copyfiles": "^2.3.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "rollup": "^0.59.3",
    "semantic-release": "^17.1.1",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "typescript": "^3.9.7",
    "uhst-server": "^1.0.1"
  }
}
